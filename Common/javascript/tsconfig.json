{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true
  },
  "exclude": [
    "jspm_packages",
    "node_modules",
    "source/**/*.steps.ts",
    "compiled"
  ],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "genDir": "compiled"
  }
}
